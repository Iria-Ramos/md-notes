---
import Logo from '../../base/logo.astro';
import SocialIcons from '../../layout/social-icons.astro';
import SearchWithData from '../../search/ui/search-with-data.astro';
import Navigation from './navigation.astro';
import ThemeSwitcher from './theme-switcher.astro';
---

<>
  <a
    href='/'
    aria-label='Main page'
    class='logo'>
    <Logo />
  </a>
  <Navigation />
  <div class='header-panel'>
    <div class='header-icons'>
      <ThemeSwitcher />
      <SocialIcons
        isFooter={false}
        styleClass='social-icons'
      />
    </div>
  </div>
</>
<style>
  .logo {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    font-size: 1.125rem;
    line-height: 1.75rem;
    font-weight: 600;
  }
  .header-panel {
    display: flex;
    width: 10%;
    align-items: center;
    justify-content: flex-end;
    gap: 0.25rem;
    min-width: 80px;
    min-height: 64px;
  }
  @media (min-width: 768px) {
    .header-panel {
      gap: 0.5rem;
    }
  }
  @media (min-width: 1024px) {
    .header-panel {
      gap: 1rem;
    }
    .logo {
      margin-right: 1rem;
    }
  }
  @media (min-width: 1280px) {
    .header-panel {
      min-width: 280px;
      gap: 2.5rem;
    }
    .logo {
      margin-right: 1.5rem;
    }
  }
  .header-icons {
    display: flex !important;
    gap: 0.75rem;
    align-items: center;
    padding-right: 1rem;
  }
</style>
