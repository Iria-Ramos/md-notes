---
import { siteConfig } from '../../app/config/site';


export interface Props {
  styleClass?: string;
  strokeWidth?: number;
  isFooter?: boolean;
}

const { styleClass = '', strokeWidth = 1, isFooter = false } = Astro.props;

const size = isFooter ? 20 : 18;
const { social } = siteConfig;

const githubIcon = `<svg width="${size}" height="${size}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="${strokeWidth}" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>`;

const linkedinIcon = `<svg width="${size}" height="${size}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="${strokeWidth}" stroke-linecap="round" stroke-linejoin="round"><path d='M19.959 11.719v7.379h-4.278v-6.885c0-1.73-.619-2.91-2.167-2.91-1.182 0-1.886.796-2.195 1.565-.113.275-.142.658-.142 1.043v7.187h-4.28s.058-11.66 0-12.869h4.28v1.824l-.028.042h.028v-.042c.568-.875 1.583-2.126 3.856-2.126 2.815 0 4.926 1.84 4.926 5.792zM2.421.026C.958.026 0 .986 0 2.249c0 1.235.93 2.224 2.365 2.224h.028c1.493 0 2.42-.989 2.42-2.224C4.787.986 3.887.026 2.422.026zM.254 19.098h4.278V6.229H.254v12.869z' /></svg>`




---

<div class={`social-icons ${isFooter ? 'footer-layout' : ''} ${styleClass}`}>

  <a
    href={social.github}
    aria-label='Github'
    class='social-link'>
    <span
      class='icon'
      set:html={githubIcon}
    />
  </a>

  <a
    href={social.linkedin}
    aria-label='LinkedIn'
    class='social-link'>
    <span
      class='icon dailydev-icon'
      set:html={linkedinIcon}
    />
  </a>
</div>

<style>
  .social-icons {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    gap: 1rem;
  }

  .footer-layout {
    gap: 2rem;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    transform: scale(1.25);
  }

  .icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .icon svg {
    stroke: #000;
    transition: all 0.3s ease;
  }

  @media (prefers-color-scheme: dark) {
    .icon svg {
      stroke: #fff;
    }
  }

  .social-link:hover .icon svg {
    fill: #dbeafe;
    stroke: #dbeafe;
  }

  .mastodon-icon svg,
  .telegram-icon svg,
  .bsky-icon svg,
  .substack-icon svg {
    stroke: #000;
  }

  @media (prefers-color-scheme: dark) {
    .mastodon-icon svg,
    .telegram-icon svg,
    .bsky-icon svg,
    .substack-icon svg {
      stroke: #fff;
    }
  }

  .social-link:hover .mastodon-icon svg,
  .social-link:hover .telegram-icon svg,
  .social-link:hover .bsky-icon svg,
  .social-link:hover .substack-icon svg {
    fill: #dbeafe;
    stroke: #dbeafe;
  }

  .dailydev-icon svg {
    stroke: none;
  }

  .dailydev-icon svg path {
    fill: #151618;
    stroke: #000;
    transition: all 0.3s ease;
  }

  @media (prefers-color-scheme: dark) {
    .dailydev-icon svg path {
      stroke: #fff;
    }
  }

  .social-link:hover .dailydev-icon svg path {
    fill: #dbeafe;
    stroke: #dbeafe;
  }

  .social-link:hover .dailydev-icon svg path {
    transform: scale(1.25);
  }
</style>
